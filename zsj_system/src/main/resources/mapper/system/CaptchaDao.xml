<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zsj.system.dao.CaptchaDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.zsj.system.entity.CaptchaEntity" id="captchaMap">
        <result property="uuid" column="uuid"/>
        <result property="code" column="code"/>
        <result property="expireTime" column="expire_time"/>
        <result property="base64" column="base64"/>
    </resultMap>


    <insert id="saveCaptcha" >
        insert into sys_captcha(uuid,code,expire_time,base64)
        values(#{captcha.uuid},#{captcha.code},#{captcha.expireTime},#{captcha.base64})
    </insert>

</mapper>